@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
}

<div class="row">
    <div class="col-md-9">
        <h1>@CurrentPage.Title</h1><br />
        <div>@CurrentPage.BodyText</div>
    </div>
    <div class="col-md-3">
        
@{
	var selection = CurrentPage.Site().FirstChild("Partnerships").Children.Where("Visible");
}

Our Partners
<ol>
	@{
		dynamic tItem = null;
	}
	@foreach(var item in selection)
	{
		
		if(@item.Name != "Badge Of Honour")
		{
			<li>
			<a href="@item.Url">@item.Name</a>
		</li>
		}
		else
		{
			tItem = item;
		}
	}
</ol>
	<br />
	<br />
<div class="row">
	
	<div>
	Badge Of Honour
	</div>
	<ul>
	<li>
	<a href="@tItem.Url">@tItem.Name</a>
	</li>
	</ul>

	</div>
    </div>
</div>